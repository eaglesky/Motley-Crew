<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %> </title>

  <link href="http://cdn.bootcss.com/bootstrap-table/1.3.0/bootstrap-table.min.css" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

  <%= yield :head %>
</head>
<body>

    <%= render 'layouts/header' %>
    <div class="container">

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      
      <%= yield %>

      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
      
      
    </div>

  <script src="http://cdn.bootcss.com/bootstrap-table/1.3.0/bootstrap-table.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap-table/1.3.0/locale/bootstrap-table-en-US.min.js"></script>

</body>
</html>
